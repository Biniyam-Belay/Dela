generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"] // Keep if using driver adapters
  // Explicitly set the output path relative to this schema file
  output          = "../node_modules/@prisma/client"
  engineType      = "library" // Keep if needed for edge/wasm
